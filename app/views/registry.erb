<link rel="stylesheet" href="./application.css">
<h1>REGISTRY</h1>

<h2> <%= (demographic || "All registered bots").capitalize %>:
      <%= (demographic_value || "").capitalize %> </h2>

<div id="robot_links">
<% @robots.each do |robot| %>
  <h3><a href="/robotregistry/<%=robot.data[:id]%>" id="<%=robot.data[:name]%>">NAME: <%=robot.data[:name]%></a></h3>
  <img height="150" width="150" src="https://robohash.org/<%=robot.data[:avatar_id]%>" alt="No Picture"/>

  <a id="edit<%=robot.data[:id]%>" href="/robotregistry/<%=robot.data[:id]%>/update">edit</a>

  <form class="" action="/robotregistry/<%= robot.data[:id] %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" id="delete<%=robot.data[:id]%>" value="Delete">
  </form><% end %>
</div>
