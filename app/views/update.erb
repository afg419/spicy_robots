<h1>Edit robot:</h1>

<form class="registration-form" action="/robotregistry/<%= @robot.data[:id] %>" method="post">
  <input type="hidden" name="_method" value="put">

  <ul>
    <% @robot.data.each do |attribute, value| %>
      <% unless [:id, :avatar_id].include?(attribute) %>
      <li><%= attribute %>: <input type='text' name="robot[<%=attribute%>]" value="<%= value %>"></li>
      <% end %>
    <% end %>
  </ul>

  <input id="submit" type='submit'/>
</form>
